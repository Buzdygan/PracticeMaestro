rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    match /practiceItems/{itemId} {
      allow read, write: if request.auth != null && request.auth.uid == resource.data.userId;
    }
    match /practiceSessions/{sessionId} {
      allow read, write: if request.auth != null && request.auth.uid == resource.data.userId;
    }
  }
}